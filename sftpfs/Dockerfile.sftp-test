# Dockerfile for SFTP test server using Alpine Linux and OpenSSH
FROM alpine:latest

# Install OpenSSH server
RUN apk add --no-cache openssh openssh-sftp-server

# Create test user with password "testpass"
RUN adduser -D -s /bin/sh testuser && \
    echo "testuser:testpass" | chpasswd

# Create test directory with proper permissions
RUN mkdir -p /home/testuser/testdata && \
    chown -R testuser:testuser /home/testuser/testdata && \
    chmod 755 /home/testuser/testdata

# Configure SSH for SFTP-only access
RUN mkdir -p /etc/ssh && \
    ssh-keygen -A && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config && \
    sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin no/' /etc/ssh/sshd_config && \
    sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config

# Add SFTP subsystem configuration
RUN echo "Subsystem sftp /usr/lib/ssh/sftp-server" >> /etc/ssh/sshd_config

# Expose SSH port
EXPOSE 22

# Start SSH daemon in foreground
CMD ["/usr/sbin/sshd", "-D", "-e"]
